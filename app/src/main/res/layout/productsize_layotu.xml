<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:padding="@dimen/_5sdp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/selectsizeTv"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/selectsize"
        android:gravity="fill"
        android:textColor="@color/appcolor"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getofferconst"
        app:layout_constraintBottom_toTopOf="@+id/selecttenurTV"
        />
    <TextView
        android:id="@+id/sizeoneTv"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="6 x 3"
        android:background="@drawable/roundwhite_shadow_button"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/selectsizeTv"
        app:layout_constraintStart_toEndOf="@+id/selectsizeTv"
        app:layout_constraintEnd_toStartOf="@+id/sizetwoTv"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/sizetwoTv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintWidth_percent="0.25"
        android:text="6 x 4"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/roundwhite_shadow_button"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/sizeoneTv"
        app:layout_constraintStart_toEndOf="@+id/sizeoneTv"
        app:layout_constraintEnd_toStartOf="@+id/sizethreeTv"

        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/sizethreeTv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="6 x 5"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/roundwhite_shadow_button"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/sizetwoTv"
        app:layout_constraintStart_toEndOf="@+id/sizetwoTv"
        app:layout_constraintEnd_toStartOf="@+id/sizefourTv"

        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/sizefourTv"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/roundwhite_shadow_button"
        android:gravity="center_vertical"
        android:text="6 x 6"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/sizethreeTv"
        app:layout_constraintTop_toTopOf="@+id/sizethreeTv"
        tools:ignore="RtlCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>